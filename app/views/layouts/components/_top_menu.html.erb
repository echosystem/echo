<%about_path ||= static_path(:about)%>
<%logout ||= true%>

<% content_tag :div, :id => 'top_menu_container' do %>

  <%= link_to I18n.t('layouts.outer_menu.logout'),
              signout_path,
              :method => :delete,
              :id => 'logout_button' if current_user_session and logout %>
  <%= link_to(I18n.t('layouts.outer_menu.about'),
              about_path,
              :id => 'about_echo_button',
              :class => 'outerMenuItem') %>
  <%= link_to(I18n.t('layouts.outer_menu.feedback'),
              new_feedback_path,
              :id => 'feedback_button',
              :class => 'outerMenuItem') %>
  <%= link_to 'Blog',
              'http://blog.echo.to',
              :id => 'blog_button',
              :target => '_blank' %>

  <% content_tag :span, :id => 'echo_language_button_container', :class => 'main_menu_item' do %>
    <%= content_tag :span, I18n.t('layouts.outer_menu.language'),
                    :id => 'echo_language_button',
                    :class => 'main_menu_item' %>
 	  <%= render :partial => "layouts/components/language_selector" %>
  <% end %>

<% end %>
