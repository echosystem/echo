<% membership ||= @membership %>
<% content_for "membership_#{membership.id}_label".to_sym do %>
  <%= h membership.organisation %>
<% end %>
<% content_for "membership_#{membership.id}_value".to_sym do %>
  <%= h membership.position %>
<% end %>
<%= render :partial => 'users/components/entry', :locals => {:type => 'membership', :entry => membership} %>