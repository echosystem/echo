<% form_for @user, :url => users_path,
            :html => {:id => 'new_user_form',
                      :class => "echoForm ajax_form"} do |f| %>

  <% content_tag :p do %>
    <%= content_tag :label, I18n.t('application.general.email') %><br/>
    <%= f.text_field :email %>
  <% end %>

  <%= f.submit I18n.t('users.signup.label'),
               :class => 'signinup_button form_button_200' %>

<% end %>