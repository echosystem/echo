<% type_dom_class = @type.to_s.underscore %>
var elements = $("<%= escape_javascript(render :partial => "statements/children_list", :locals => {:children => @children[@type],
                                                                                                   :type => type_dom_class, 
                                                                                                   :new_level => true}) %>");
var statement = $('#statements div.<%=dom_class(@statement_node)%>');
var element = statement.find('.<%= type_dom_class.pluralize %> .children_header');

elements.insertAfter(element).animate(toggleParams, 300);

statement.data('api').reinitialiseChildren(".<%=type_dom_class.pluralize%>");